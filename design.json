{
  "name": "warm-tea-and-honest-reviews-design",
  "philosophy": "A calm, text-focused reading experience inspired by books, travel, and lifestyle, emphasizing typography and whitespace.",
  "colors": {
    "background": "#FFFFFF",
    "textPrimary": "#333333",
    "textSecondary": "#666666",
    "textMuted": "#888888",
    "link": "#333333",
    "linkHover": "#666666",
    "border": "#E5E5E5",
    "footerBg": "#F8F8F8",
    "accent": "#333333"
  },
  "typography": {
    "fontFamily": {
      "serif": ["'Georgia'", "'Times New Roman'", "serif"],
      "sans": ["sans-serif"]
    },
    "fontSize": {
      "body": "16px",
      "meta": "13px",
      "h1": "48px",
      "h2": "36px",
      "h3": "28px",
      "postTitle": "22px",
      "navLink": "14px",
      "logo": "28px",
      "logoImgMaxHeight": "95px"
    },
    "lineHeight": {
      "body": "1.6",
      "heading": "1.3"
    }
  },
  "layout": {
    "containerMaxWidth": "1200px",
    "spacing": {
      "sectionGap": "80px",
      "gridGap": "40px",
      "topicGap": "30px",
      "cardPadding": "25px"
    },
    "borderRadius": "8px"
  },
  "components": {
    "navbar": {
      "height": "sticky",
      "padding": "20px 0"
    },
    "hero": {
      "padding": "100px 20px",
      "background": "#fcfcfc"
    },
    "postCard": {
      "imageHeight": "300px",
      "imageObjectFit": "contain",
      "imageBackground": "#f5f5f5",
      "transition": "0.3s ease",
      "hoverEffect": "translateY(-5px) + shadow",
      "ratingColor": "#ffc107"
    },
    "topicCard": {
      "imageHeight": "400px",
      "hoverEffect": "scale(1.05)"
    }
  },
  "responsive": {
    "tablet": "1024px",
    "mobile": "768px"
  }
}
