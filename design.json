{
  "philosophy": "Document-first, typography-driven, minimal UI",
  "colors": {
    "background": "#FAF9F7",
    "text": "#1A1A1A",
    "mutedText": "#555555",
    "border": "#E5E5E5"
  },
  "typography": {
    "fonts": {
      "primary": ["Georgia", "Times New Roman", "serif"],
      "secondary": ["-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"]
    },
    "scale": {
      "body": { "size": "1rem", "lineHeight": 1.8 },
      "meta": { "size": "0.9rem", "lineHeight": 1.6 },
      "sectionTitle": { "size": "2rem", "lineHeight": 1.3 },
      "pageTitle": { "size": "2.75rem", "lineHeight": 1.2 },
      "siteTitle": { "size": "3.25rem", "lineHeight": 1.15 }
    }
  },
  "layout": {
    "width": {
      "list": "720px",
      "detail": "640px"
    },
    "spacing": {
      "pageTop": "5rem",
      "sectionGap": "3.5rem",
      "paragraphGap": "1.25em"
    }
  },
  "components": {
    "reviewList": {
      "structure": "article-flow",
      "card": false,
      "image": "optional"
    }
  },
  "motion": {
    "enabled": true,
    "type": "opacity",
    "duration": "100ms"
  },
  "rules": {
    "noCards": true,
    "noGrids": true,
    "typographyOverComponents": true
  }
}